APP_NAME=Business CRM System
VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://crm_user:crm_password@localhost:5432/crm_db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration - Use comma-separated values or "*"
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# MoySklad Integration
MOYSKLAD_BASE_URL=https://api.moysklad.ru/api/remap/1.2
MOYSKLAD_USERNAME=
MOYSKLAD_PASSWORD=
MOYSKLAD_TOKEN=105d4f38eb9a02400c3a6428ea71640babe37e98
MOYSKLAD_SYNC_INTERVAL_MINUTES=15
MOYSKLAD_WEBHOOK_SECRET=your-webhook-secret
MOYSKLAD_SYNC_BATCH_SIZE=1000
MOYSKLAD_ENABLE_DOCUMENTS_SYNC=true
MOYSKLAD_ENABLE_REPORTS=true
# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Production Database (for docker-compose.prod.yml)
POSTGRES_DB=crm_production
POSTGRES_USER=crm_prod_user
POSTGRES_PASSWORD=super-secure-password-change-in-production
REDIS_PASSWORD=redis-password-change-in-production